@model ClientsListViewModel
@{
    this.ViewData["Title"] = "Списък с клиенти";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h2>@this.ViewData["Title"]</h2>
<h4 class="text-muted">Брой: @Model.Clients.Count()</h4>
<hr />
<div class="text-center">
    <ul style="list-style:none">
        <li class="nav-item">
            <a class="btn btn-secondary btn-lg" asp-controller="Clients" asp-action="Create"><i class="fa-solid fa-user-plus"></i>   Добави клиент</a>
        </li>
    </ul>
</div>
<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var client in this.Model.Clients)
    {
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa-solid fa-user me-md-2"></i>@client.FullName
                    </h5>
                    <p class="card-text"><i class="fa-solid fa-phone me-md-2"></i>@client.PhoneNumber</p>
                    <p class="card-text">@client.Address</p>
                </div>
            </div>
        </div>
    }
</div>